<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SettingsActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/setting_toolbar"

        >
    </include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/set_profile_image_id"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/profile_image"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/colorPrimary"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_user_name"
        android:layout_below="@id/set_profile_image_id"
        android:hint="Username"
        android:drawableStart="@drawable/edit_profile"
        android:drawableLeft="@drawable/edit_profile"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:background="@drawable/inputs"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_profile_status"
        android:layout_below="@id/set_user_name"
        android:hint="Hey, i am online..."
        android:drawableStart="@drawable/edit_status"
        android:drawableLeft="@drawable/edit_status"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:background="@drawable/inputs"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_settings_button"
        android:layout_below="@id/set_profile_status"
        android:text="Update"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:background="@drawable/buttons"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/dark_mode_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dark Mode"
        android:layout_below="@id/update_settings_button"
        android:textSize="10dp"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="15dp"
        >

    </TextView>

    <Button
        android:id="@+id/on_btn_id"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@id/dark_mode_text_id"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/buttons"
        android:onClick="btndarkmodeOn"
        android:text="ON"
        android:textColor="@color/textColor"
        android:textSize="10dp">

    </Button>

    <Button
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@id/dark_mode_text_id"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/buttons"
        android:onClick="btndarkmodeOff"
        android:text="OFF"
        android:textColor="@color/textColor"
        android:textSize="10dp">

    </Button>

</RelativeLayout>