<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_profile_image"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:src="@drawable/profile_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:cropToPadding="true"
        android:layout_marginRight="10dp"

        >

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/custom_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display UserName"
        android:fontFamily="@font/strawberry_muffins"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="18sp"
        />


    <TextView
        android:id="@+id/custom_user_last_seen"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_profile_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/strawberry_muffins"
        android:text="Last seen"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/video_call_button_id"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/video_call_icon"
        >
    </Button>
</RelativeLayout>